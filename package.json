{
  "$schema": "https://json.schemastore.org/package#",
  "name": "friendlyfiregame",
  "version": "2.7.1-pre",
  "description": "Explore the world of “Friendly Fire” and meet all its inhabitants in a quest to save the world from an unknown destiny.",
  "homepage": "https://www.friendlyfiregame.com/",
  "author": "The Cat Hive Developers",
  "maintainers": [],
  "keywords": [
    "game",
    "2d",
    "browser",
    "electron",
    "platformer",
    "metroidvania",
    "pixelart"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/friendlyfiregame/friendlyfiregame"
  },
  "main": ".webpack/main",
  "scripts": {
    "clean": "rimraf lib dist out",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:spell": "cspell --no-progress",
    "test:lint": "run-s test:lint:*",
    "test:lint:html": "htmlhint ./index.html",
    "test:lint:markdown": "markdownlint -c ./.markdownlint.json -i node_modules/ -i dist/ -i out/ .",
    "test:lint:typescript": "eslint --max-warnings 0 --ext .ts src",
    "test:lint:package.json": "npmPkgJsonLint .",
    "compile": "tsc",
    "watch": "webpack watch",
    "dist": "webpack",
    "start": "run-s start:dev",
    "start:dev": "webpack serve --mode=development --config-name=web --config-name=service-worker",
    "start:prod": "http-server ./dist -b -p 8001",
    "package": "electron-forge package",
    "package:darwin-x64": "electron-forge package --platform=darwin --arch=x64",
    "package:darwin-arm64": "electron-forge package --platform=darwin --arch=arm64",
    "package:darwin-universal": "electron-forge package --platform=darwin --arch=universal",
    "package:linux-x64": "electron-forge package --platform=linux --arch=x64",
    "package:linux-arm64": "electron-forge package --platform=linux --arch=arm64",
    "package:win32-x64": "electron-forge package --platform=win32 --arch=x64",
    "package:win32-arm64": "electron-forge package --platform=win32 --arch=arm64",
    "make": "electron-forge make",
    "prepare": "run-s clean compile dist"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@electron-forge/publisher-github": "^7.2.0",
    "@jest/globals": "^29.7.0",
    "@kayahr/jest-electron-runner": "^29.11.0",
    "@swc/register": "^0.1.10",
    "@types/express-ws": "^3.0.4",
    "@types/generate-json-webpack-plugin": "^0.3.7",
    "@types/git-rev-sync": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^12.0.2",
    "cspell": "^8.3.2",
    "electron": "^28.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "generate-json-webpack-plugin": "^2.0.0",
    "git-rev-sync": "^3.0.2",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-extended": "^4.0.2",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.38.0",
    "node-loader": "^2.0.0",
    "npm-package-json-lint": "^7.1.0",
    "npm-run-all": "4.1.5",
    "raw-loader": "^4.0.2",
    "rimraf": "^5.0.5",
    "semver": "^7.5.4",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@kayahr/aseprite": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "steamworks.js": "^0.3.1",
    "tslib": "^2.6.2"
  }
}
