{
  "$schema": "https://json.schemastore.org/package#",
  "name": "friendlyfire",
  "version": "2.6.0",
  "description": "Explore the world of “Friendly Fire” and meet all its inhabitants in a quest to save the world from an unknown destiny.",
  "homepage": "https://www.friendlyfiregame.com/",
  "author": "The Cat Hive Developers",
  "maintainers": [],
  "keywords": [
    "game",
    "2d",
    "browser",
    "electron",
    "platformer",
    "metroidvania",
    "pixelart"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/friendlyfiregame/friendlyfiregame"
  },
  "main": ".webpack/main",
  "scripts": {
    "clean": "npx rimraf lib dist out",
    "markdownlint": "npx markdownlint -c ./.markdownlint.json -i node_modules/ -i dist/ -i out/ .",
    "htmlhint": "npx htmlhint ./index.html",
    "eslint": "npx eslint --ext .ts ./src/",
    "lint": "npm run -s markdownlint && npm run -s htmlhint && npm run -s eslint",
    "check": "npx jest",
    "cspell": "npx cspell \"**/*\"",
    "coverage": "npx jest --coverage",
    "jest": "npx jest",
    "test": "npm run -s cspell && npm run -s lint && npm run -s check",
    "compile": "npx tsc",
    "watch": "npx webpack watch",
    "prepare": "npm run -s clean",
    "dist": "npx webpack",
    "start": "npx webpack serve --devtool=inline-source-map",
    "package": "npx electron-forge package",
    "package:darwin-x64": "npx electron-forge package --platform=darwin --arch=x64",
    "package:darwin-arm64": "npx electron-forge package --platform=darwin --arch=arm64",
    "package:darwin-universal": "npx electron-forge package --platform=darwin --arch=universal",
    "package:linux-x64": "npx electron-forge package --platform=linux --arch=x64",
    "package:linux-arm64": "npx electron-forge package --platform=linux --arch=arm64",
    "package:win32-x64": "npx electron-forge package --platform=win32 --arch=x64",
    "package:win32-arm64": "npx electron-forge package --platform=win32 --arch=arm64",
    "make": "npx electron-forge make",
    "prepublish": "npm run -s dist"

  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.3",
    "@electron-forge/maker-deb": "^6.0.3",
    "@electron-forge/maker-rpm": "^6.0.3",
    "@electron-forge/maker-squirrel": "^6.0.3",
    "@electron-forge/maker-zip": "^6.0.3",
    "@electron-forge/plugin-auto-unpack-natives": "^6.0.3",
    "@electron-forge/plugin-webpack": "^6.0.3",
    "@electron-forge/publisher-github": "6.0.3",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "@kayahr/jest-electron-runner": "^29.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/generate-json-webpack-plugin": "^0.3.4",
    "@types/git-rev-sync": "^2.0.0",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^11.0.0",
    "cspell": "^6.14.3",
    "electron": "^21.3.0",
    "eslint": "^8.27.0",
    "generate-json-webpack-plugin": "^2.0.0",
    "git-rev-sync": "^3.0.2",
    "git-revision-webpack-plugin": "^5.0.0",
    "htmlhint": "^1.1.0",
    "jest": "^29.3.1",
    "jest-cli": "^29.3.1",
    "jest-extended": "^3.1.0",
    "markdownlint": "^0.26.2",
    "markdownlint-cli": "^0.32.2",
    "node-loader": "^2.0.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.8",
    "source-map-loader": "^4.0.1",
    "steal": "^2.3.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "steamworks.js": "^0.0.25",
    "tslib": "^2.4.1"
  }
}
