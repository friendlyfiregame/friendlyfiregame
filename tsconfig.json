{
  "$schema": "https://json.schemastore.org/tsconfig#",
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "composite": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "rootDirs": [
    ],
    "outDir": "lib/__root"
  },
  "include": [
    ".*.js",
    "*.js",
    ".*.ts",
    "*.ts"
  ],
  "references": [
    { "path": "src/shared" },
    { "path": "src/web" },
    { "path": "src/service-worker" },
    { "path": "src/electron-main" },
    { "path": "src/electron-preload" }
  ]
}
